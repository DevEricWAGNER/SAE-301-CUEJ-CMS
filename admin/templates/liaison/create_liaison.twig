{% extends "base.twig" %}

{% block main %}
    <h1>De quel Article voulez vous effectuez des liaisons ?</h1>
    <form action="index.php?action=liaison" method="post">
        <select name="article" class="form_input">
            <option value="">--- Choisissez un Article ---</value>
            {% for article in articles %}
                <option value="{{article.id}}">{{article.article_name}}</option>
            {% endfor %}
        </select>

        <select name="liaison" class="form_input">
            <option value="">--- Choisissez une liaison ---</option>
            {% for liaison in liaisons %}
                <option value="{{liaison.id}}">{{liaison.text}}</option>
            {% endfor %}
        </select>
        <input type="submit" value="Valider" class="form_input_submit" name="submit_liaison">
    </form>
{% endblock %}